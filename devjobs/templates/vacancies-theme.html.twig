
<!-- Wrapper -->
<div class="w-11/12 md:w-10/12 mx-auto">

	<!-- Search bar -->
	<div class="relative top-[-2.5rem] bg-white dark:bg-very_dark_blue px-8 py-6 rounded">
		<form method="GET" class="flex justify-between text-very_dark_blue">
			<!-- Search by title -->
			<div class="flex items-center w-4/12">
				<svg class="hidden md:block" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd" clip-rule="evenodd" d="M16.024 15.0588H17.1123L23.9435 21.9037L21.9037 23.9435L15.0588 17.1123V16.0308L14.6824 15.6544C13.1286 16.9891 11.1093 17.7968 8.89842 17.7968C3.98374 17.7968 0 13.8131 0 8.89842C0 3.98374 3.98381 0 8.89842 0C13.813 0 17.7968 3.98374 17.7968 8.89842C17.7968 11.1093 16.9891 13.1286 15.6475 14.6824L16.024 15.0588ZM2.73799 8.89842C2.73799 12.3003 5.49651 15.0588 8.89842 15.0588C12.3003 15.0588 15.0588 12.3003 15.0588 8.89842C15.0588 5.49651 12.3003 2.73799 8.89842 2.73799C5.49651 2.73799 2.73799 5.49651 2.73799 8.89842Z" fill="#5964E0"/>
				</svg>
				<input type="text" placeholder="Filter by title, companies, expertise..." name="title"
				class="w-full ml-6 focus:outline-0 dark:bg-very_dark_blue dark:text-white">
			</div>

			<!-- Search by location -->
			<div class="hidden md:flex items-center">
				<svg width="17" height="24" viewBox="0 0 17 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd" clip-rule="evenodd" d="M8.4477 0C10.6804 0 12.7796 0.870546 14.3585 2.45105C17.2803 5.37556 17.6434 10.8781 15.1348 14.2255L8.4477 23.894L1.75057 14.2119C-0.747997 10.8781 -0.384894 5.37556 2.53693 2.45105C4.11575 0.870546 6.21459 0 8.4477 0ZM5.47357 8.29091C5.47357 9.97484 6.84272 11.3455 8.52485 11.3455C10.207 11.3455 11.5761 9.97484 11.5761 8.29091C11.5761 6.60698 10.207 5.23636 8.52485 5.23636C6.84272 5.23636 5.47357 6.60698 5.47357 8.29091Z" fill="#5964E0"/>
				</svg>
				<input type="text" placeholder="Filter by location..." name="location"
				class="ml-6 focus:outline-0 dark:bg-very_dark_blue dark:text-white">
			</div>

			<!-- Time checkbox -->
			<div class="hidden md:flex items-center">
				<input type="checkbox" name="time" class="w-6 h-6 mr-6 accent-violet">
				<span class="mr-6 font-bold text-base dark:text-white">Full Time Only</span>
				<!-- Search button -->
				<button type="submit "class="px-9 py-4 text-base font-bold text-white bg-violet hover:bg-light_violet rounded">Search</button>	
			</div>

			<!-- For sm device-->
			<div class="md:hidden">
				<div class="flex items-center">
					<button id="sm-search-bar">
						<svg class="mr-4" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M19.1076 1.50591e-06H0.860224C0.538187 -0.000593357 0.243138 0.175089 0.0960199 0.454871C-0.0531279 0.738422 -0.0269509 1.07987 0.163593 1.33883L6.84866 10.5411C6.85089 10.5443 6.85333 10.5473 6.85556 10.5504C7.09845 10.8709 7.22995 11.2591 7.23056 11.6579V19.1605C7.22914 19.3825 7.31842 19.5961 7.47853 19.7537C7.63884 19.9112 7.85677 20 8.08405 20C8.19951 19.9998 8.31396 19.9774 8.4207 19.934L12.1772 18.5345C12.5136 18.4339 12.7371 18.1236 12.7371 17.75V11.6579C12.7377 11.2591 12.8692 10.8709 13.1118 10.5504C13.1141 10.5473 13.1165 10.5443 13.1187 10.5411L19.804 1.33864C19.9946 1.07987 20.0207 0.73862 19.8716 0.45507C19.7247 0.175089 19.4294 -0.000593357 19.1076 1.50591e-06Z" fill="#6E8098"/>
						</svg>
					</button>

					<button type="submit "class="p-3.5 text-base font-bold text-white bg-violet hover:bg-light_violet rounded">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" clip-rule="evenodd" d="M16.024 15.0588H17.1123L23.9435 21.9037L21.9037 23.9435L15.0588 17.1123V16.0308L14.6824 15.6544C13.1286 16.9891 11.1093 17.7968 8.89842 17.7968C3.98374 17.7968 0 13.8131 0 8.89842C0 3.98374 3.98381 0 8.89842 0C13.813 0 17.7968 3.98374 17.7968 8.89842C17.7968 11.1093 16.9891 13.1286 15.6475 14.6824L16.024 15.0588ZM2.73799 8.89842C2.73799 12.3003 5.49651 15.0588 8.89842 15.0588C12.3003 15.0588 15.0588 12.3003 15.0588 8.89842C15.0588 5.49651 12.3003 2.73799 8.89842 2.73799C5.49651 2.73799 2.73799 5.49651 2.73799 8.89842Z" fill="#ffffff"/>
						</svg>
					</button>
				</div>
			</div>
				<!-- Modal -->
	<div id="sm-modal" class="hidden md:hidden absolute z-10 flex flex-col bg-white dark:bg-very_dark_blue rounded w-full p-6 border-2 border-violet left-0">
		<div class="flex items-center">
			<svg width="17" height="24" viewBox="0 0 17 24" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path fill-rule="evenodd" clip-rule="evenodd" d="M8.4477 0C10.6804 0 12.7796 0.870546 14.3585 2.45105C17.2803 5.37556 17.6434 10.8781 15.1348 14.2255L8.4477 23.894L1.75057 14.2119C-0.747997 10.8781 -0.384894 5.37556 2.53693 2.45105C4.11575 0.870546 6.21459 0 8.4477 0ZM5.47357 8.29091C5.47357 9.97484 6.84272 11.3455 8.52485 11.3455C10.207 11.3455 11.5761 9.97484 11.5761 8.29091C11.5761 6.60698 10.207 5.23636 8.52485 5.23636C6.84272 5.23636 5.47357 6.60698 5.47357 8.29091Z" fill="#5964E0"/>
			</svg>
			<input type="text" placeholder="Filter by location..." name="location" class="ml-6 focus:outline-0 dark:bg-very_dark_blue dark:text-white">
		</div>
		<div class="flex items-center mt-12">
			<input type="checkbox" name="time" class="w-6 h-6 mr-6 accent-violet">
			<span class="mr-6 font-bold text-base dark:text-white">Full Time Only</span>	
		</div>
		<!-- Search button -->
		<button type="submit" class="w-4/2 text-base mt-6 py-4 font-bold text-white bg-violet hover:bg-light_violet rounded">Search</button>
	</div>
		</form>
	</div>



	<!-- Content -->
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3  gap-x-7 gap-y-16 mt-24 ">
		
			{% for vacancy in vacancies %}
				<div class="bg-white rounded px-8 pb-8 flex flex-col items-start dark:bg-very_dark_blue">
					<img src="{{ vacancy.image_url }}" alt="{{ vacancy.company_name }} company logo" class="relative top-[-1.5rem] h-12 w-12 rounded-lg">
					<span class="text-dark_grey ">{{ vacancy.published_date }} &#183 {{ vacancy.work_time}}</span>
					<a href="/node/{{ vacancy.nid }}"class="font-bold text-xl mt-2 hover:text-dark_grey dark:text-white dark:hover:text-dark_grey">{{ vacancy.title }}</a>
					<span class="text-dark_grey  mt-3">{{ vacancy.company_name }}</span>
					<span class="font-bold text-sm text-violet  mt-11">{{ vacancy.location }}</span>
				</div>
			{% endfor %}
	</div>

	<!-- Load more button -->
	<div class="flex justify-center mt-14 mb-28">
		<a href="/" class="px-8 py-4 text-base font-bold text-white bg-violet hover:bg-light_violet rounded">Load More</a>	
	</div>

	<h1>{{ req.time }}</h1>
</div>